<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.CommentController" style="-fx-background-color: #FFB6C1;">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="600.0">
            <children>
                <TextArea fx:id="commentTextArea" prefHeight="100.0" prefWidth="500.0" promptText="Enter your comment." layoutX="50.0" layoutY="150.0" />
                <Button layoutX="250.0" layoutY="300.0" mnemonicParsing="false" onAction="#saveComment" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #FF0D86;" text="Save" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
